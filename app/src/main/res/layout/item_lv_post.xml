<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="186dp">

        <TextView
                android:text="Luke Edward Hall Gives a MasterClass in Maximalism"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/item_ilp_img_avatar"
                android:textSize="17sp"
                android:textColor="#000000"
                android:fontFamily="@font/marat_sans_demibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="38dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/item_ilp_txt_post_title"
                android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/item_ilp_txt_tag"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="Luke Edward Hall Gives a MasterClass in Maximalism"
                android:layout_width="0dp" android:layout_height="17dp"
                app:layout_constraintEnd_toStartOf="@+id/item_ilp_img_avatar"
                android:textSize="13dp"
                android:textColor="#000000"
                android:fontFamily="@font/marat_sans_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/item_ilp_txt_author"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/item_ilp_img_avatar"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="January 31, 2018"
                android:layout_width="0dp" android:layout_height="17dp"
                app:layout_constraintEnd_toStartOf="@+id/item_ilp_img_avatar"
                android:textSize="13dp"
                android:textColor="#848484"
                android:fontFamily="@font/marat_sans_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/item_ilp_txt_date"
                app:layout_constraintTop_toBottomOf="@+id/item_ilp_txt_author"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="HTTP are the four letters at the. . ."
                android:layout_width="0dp" android:layout_height="17dp"
                app:layout_constraintEnd_toStartOf="@+id/item_ilp_img_avatar"
                android:textSize="13dp"
                android:textColor="#848484"
                android:fontFamily="@font/marat_sans_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/item_ilp_txt_date2"
                android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/item_ilp_txt_post_title"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="DESIGN"
                android:layout_width="0dp" android:layout_height="17dp"
                app:layout_constraintEnd_toStartOf="@+id/item_ilp_img_avatar"
                android:textSize="13dp"
                android:textColor="#848484"
                android:fontFamily="@font/marat_sans_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="38dp"
                android:id="@+id/item_ilp_txt_tag"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <ImageView
                android:background="#888888"
                android:layout_gravity="right"
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/item_ilp_img_avatar"
                android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"/>

        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.DrawableCheckBox
                android:layout_width="20dp"
                android:layout_height="21dp"
                app:checked_background="@drawable/rbtn_bookmark_story_clicked"
                app:unchecked_background="@drawable/rbtn_bookmark_tab"
                android:id="@+id/item_ilp_rbtn_bookmark"
                android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/item_ilp_img_avatar"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="27dp"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" app:layout_constraintTop_toBottomOf="@+id/item_ilp_txt_date"
                app:layout_constraintVertical_bias="1.0" android:background="#707070"
                app:layout_constraintHorizontal_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

