<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".view.fragment.FragmentGlobal"
            android:background="#F6F5F5">
        <TextView
                android:text="You"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/textView9"
                android:gravity="bottom|center"
                android:textSize="17sp"
                android:textColor="#000000"
                android:paddingBottom="6dp"
                android:background="#ffffff"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line"
                android:background="#707070"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="#ffffff">

            <ImageView
                    android:src="@drawable/edt_account"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/local_img_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0"/>
            <TextView
                    android:text="User name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/local_txt_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/local_img_avatar"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:textColor="#000000"
                    android:fontFamily="@font/marat_sans_regular"/>
            <TextView
                    android:text="View profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/local_txt_view_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/local_img_avatar"
                    android:layout_marginStart="21dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#1B5E20"
                    app:layout_constraintTop_toBottomOf="@+id/local_txt_username"
                    app:layout_constraintVertical_bias="0.0"
                    android:fontFamily="@font/marat_sans_regular"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line2"
                android:background="#707070"/>
        <TextView
                android:text="Stories"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_stories"
                android:layout_marginTop="20.5dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line4"
                android:background="#707070"/>
        <TextView
                android:text="Notification"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_notification"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line5"
                android:background="#707070"/>
        <TextView
                android:text="Customize your interest"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_customize_your_interest"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line6"
                android:background="#707070"/>
        <TextView
                android:text="Night mode"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_night_mode"
                android:layout_marginTop="20.5dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line7"
                android:background="#707070"/>
        <TextView
                android:text="Settings"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_settings"
                android:layout_marginTop="20.5dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line8"
                android:background="#707070"/>
        <TextView
                android:text="Help"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_help"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line9"
                android:background="#707070"/>
        <TextView
                android:text="Term of service"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_term_of_service"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line10"
                android:background="#707070"/>
        <TextView
                android:text="Privacy policy"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/local_txt_privacy_policy"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingStart="47dp"
                android:textColor="#000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/line11"
                android:background="#707070"/>
    </LinearLayout>

</layout>
