<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.FragmentGlobal">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center_horizontal" android:text="Bookmarks" android:textSize="17sp"
            android:paddingTop="11dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" android:id="@+id/textView8"
            android:background="#000000"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/bookmark_rcv_post"/>

</LinearLayout>